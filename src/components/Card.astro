---
interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<li class="link-card">
  <h2>
    {title}
  </h2>
  <p>
    {body}
  </p>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    border-radius: 7px;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    width: 100%;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
</style>
