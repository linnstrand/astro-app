<style is:global>
  .main-grid {
    display: grid;
    grid-template-columns: 28% 6% 28% 6% 28%;
    grid-template-rows: repeat(2, 1fr);
    place-items: center;
    text-align: center;
    font-size: 0.8em;
    grid-gap: 0.25em;
    > h4,
    > div {
      border: 2px solid white;
      padding: 0.35em 0.75em;
      width: 100%;
      background: theme(colors.red.200);
    }
    hr {
      width: 100%;
      border: 3px solid white;
    }
  }

  h4::before,
  h4::after {
    content: "";
    display: block;
    position: absolute;
    width: 30%;
    height: 0;
    border-top: 3px solid white;
    z-index: 1;
    top: 50%;
    right: 100%;
  }

  h4::after {
    left: 100%;
  }

  h5::before {
    content: "";
    display: block;
    position: absolute;
    width: 1.6em;
    height: 0;
    border-top: 3px solid white;
    z-index: 1;
    top: 1em;
    right: 100%;
  }
</style>
