---
import { FlowChartSegment } from "./FlowChartSegment";
import frontend from "./frontend.json";
import backend from "./backend.json";
---

<div class="grid grid-cols-3 h-full ml-32">
  <div class="m-2">
    {backend.map((skill) => <FlowChartSegment skill={skill} />)}
  </div>
  <div class="m-2">
    {frontend.map((skill) => <FlowChartSegment skill={skill} />)}
  </div>
</div>

<style is:global>
  .main-grid {
    display: grid;
    grid-template-columns: 12em 2em 13em 2em 12em;
    grid-template-rows: repeat(2, 1fr);
    place-items: center;
    text-align: center;
    font-size: 0.8em;
    grid-row-gap: 0.25em;
    > h4,
    > div {
      border: 0.25em solid white;
      padding: 0.35em 0.75em;
      width: 100%;
      background: theme(colors.red.200);
    }
  }

  h4::before,
  h4::after {
    content: "";
    display: block;
    position: absolute;
    width: 2.25em;
    height: 0;
    border-top: 3px solid white;
    z-index: 1;
    top: 50%;
    right: 100%;
  }

  h4::after {
    left: 100%;
  }

  .child-list::before {
    content: "";
    display: block;
    position: absolute;
    width: 1.5em;
    height: 0;
    border-top: 3px solid white;
    z-index: 1;
    top: 1em;
  }
</style>
