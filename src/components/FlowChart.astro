---
import { FlowChartSegment } from "./FlowChartSegment";
import frontend from "./frontend.json";
---

<div class="grid grid-cols-3 gap-8 h-full bg-cyan-800">
  <div></div>
  <div class="m-2">
    <!-- {
      frontend.map((skill) => (
        <FlowChartSegment name={skill.name} items={skill.children} />
      ))
    } -->
    <FlowChartSegment
      name="HTML"
      items={["Accessibility", "Forms", "Semantics"]}
    />
    <FlowChartSegment
      name="Tools"
      items={[
        "Git",
        "Prettier",
        "Containers",
        "Eslint",
        ["Vite", "Turbopack", "Esbuild", "Webpack"],
      ]}
    />
    <div class="main-grid mb-2">
      <h4 class="col-start-3 row-span-2 relative">HTML</h4>
      <div class="col-start-1 row-start-1">Accessibility</div>
      <div class="col-start-5 row-start-1 row-span-2">Forms</div>
      <div class="col-start-1 row-start-2">Semantics</div>
    </div>
    <div class="main-grid mb-2">
      <h4 class="col-start-3 row-span-2 relative">CSS</h4>
      <div class="col-start-1 row-start-1">Layouts</div>
      <div class="col-start-5 row-start-1 row-span-2">Responsive</div>
      <div class="col-start-1 row-start-2">CSS+</div>
    </div>
    <div class="main-grid mb-2">
      <h4 class="col-start-3 row-span-2 relative">Tools</h4>
      <div class="col-start-1 row-start-1">Git</div>
      <div class="col-start-5 row-start-1">Prettier</div>
      <div class="col-start-1 row-start-2">Containers</div>
      <div class="col-start-5 row-start-2">Eslint</div>
      <div class="grid col-start-1 row-start-3 relative">
        <h5 class="">Build</h5>
        <div class="absolute bg-red-200 -left-24 top-1 border-2 border-white">
          <div class="p-1">Vite</div>
          <div class="p-1">Turbopack</div>
          <div class="p-1">Esbuild</div>
          <div class="p-1">Webpack</div>
        </div>
      </div>
    </div>
    <div class="main-grid mb-2">
      <h4 class="col-start-3 row-span-2 relative">Libraries</h4>
      <div class="col-start-1 row-start-1">React</div>
      <div class="col-start-5 row-start-1">Vue</div>
      <div class="col-start-1 row-start-2">Svelte</div>
      <div class="col-start-5 row-start-2">Solid</div>
    </div>
    <div class="main-grid mb-2">
      <h4 class="col-start-3 row-span-2 relative">Rendering Frameworks</h4>
      <div class="col-start-1 row-start-1">Astro</div>
      <div class="col-start-5 row-start-1">NextJS</div>
      <div class="col-start-1 row-start-2">SvelteKit</div>
      <div class="col-start-5 row-start-2">Nuxt</div>
    </div>
  </div>
</div>
