---
import { FlowChartSegment } from "./solid/FlowChartSegment";
import frontend from "../data/frontend.json";
import backend from "../data/backend.json";
import operations from "../data/operations.json";
---

<div class="flex flex-wrap text-gray-200 min-w-[94rem]">
  <div class="mx-16 w-[34rem]">
    <h2 class="mt-2 text-2xl text-center">Backend</h2>
    {backend.map((skill) => <FlowChartSegment skill={skill} />)}
  </div>
  <div class="mx-16 w-[34rem]">
    <h2 class="mt-2 text-2xl text-center">Frontend</h2>
    {frontend.map((skill) => <FlowChartSegment skill={skill} />)}
  </div>
  <div class="mx-16 w-[34rem]">
    <h2 class="mt-2 text-2xl text-center">Operations</h2>
    {operations.map((skill) => <FlowChartSegment skill={skill} />)}
  </div>
</div>

<style is:global>
  .main-grid {
    grid-template-columns: 12em 2em 13em 2em 12em;
  }
</style>
 ./react/solid/FlowChartSegment
