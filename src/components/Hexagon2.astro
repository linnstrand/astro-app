---
const { title, size, class: className } = Astro.props;
console.log("class", className);
---

<div class=`hex ${className}`>
  <div class=`hox z-10 ml-0 relative bg-white`>
    <div class="inner flex flex-col justify-center h-full">
      <h4>{title}</h4>
    </div>
    <div class="corner-1"></div>
    <div class="corner-2"></div>
  </div>
  <div class=`hox opacity-20 bg-gray-800 blur-sm top-2 left-2 absolute ml-0`>
    <div class="inner flex flex-col justify-center h-full">
      <h4></h4>
    </div>
    <div class="corner-1"></div>
    <div class="corner-2"></div>
  </div>
</div>

<style>
  .hex {
    width: 166px;
    height: 96px;
    position: relative;
    float: left;
    margin: 30px 6px;
    text-align: center;
    zoom: 1;
  }
  .hox {
    width: 166px;
    height: 96px;
    text-align: center;
    zoom: 1;
  }
  .hex.hex-gap {
    margin-left: 96px;
  }

  .hex .corner-1,
  .hex .corner-2 {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: inherit;
    overflow: hidden;
    backface-visibility: hidden;
  }

  .hex .corner-1 {
    transform: rotate(60deg);
  }

  .hex .corner-2 {
    transform: rotate(-60deg);
  }

  .hex .corner-1:before {
    transform: rotate(-60deg) translate(calc(var(--tracksize) * -0.6), 0px);
    transform-origin: 0 0;
  }

  .hex .corner-2:before {
    transform: rotate(60deg) translate(calc(var(--tracksize) * -0.6), -210px);
    bottom: 0;
  }

  /* Custom styles*/
  .hex .inner {
    color: #202020;
  }

  .hex h4 {
    font-size: 1.6vmin;
    font-weight: bold;
    margin: 0;
  }

  .hex hr {
    border: 0;
    border-top: 1px solid #202020;
    width: 60%;
    margin: 15px auto;
  }

  .hex p {
    font-size: 1.5vmin;
    width: 80%;
    margin: 0 auto;
  }
</style>
