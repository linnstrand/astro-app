---
import "../style/reset.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="page w-full">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --blue-hsl: 227, 60%, 60%;
    --accent: 230, 80%, 50%;
    --accent-light: 230, 80%, 80%;
    --accent-dark: 230, 80%, 20%;

    ---hsl-blue: hsl(var(--blue-hsl));
    --overlay-blue: hsla(227, 66%, 55%, 0.2);

    --accent-50: hsl(230 80% 50%);
    --accent-90: hsl(230 80% 80%);
    --accent-20: hsl(230 80% 20%);
  }

  body {
    background: #13151a;
  }
  .page {
    background: linear-gradient(
        210deg,
        hsla(var(--blue-hsl), 0.2),
        transparent 40%
      ),
      radial-gradient(hsla(260, 66%, 55%, 0.2), transparent 30%) no-repeat -60vw -10vh /
        105vw 210vh;
  }
</style>
