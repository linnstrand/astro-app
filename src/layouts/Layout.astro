---
import "../style/reset.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="page w-full">
      <nav
        class="sm:flex-row sm:text-left sm:justify-between sm:items-baseline flex flex-col w-full max-w-screen-md px-16 py-4 font-sans text-center text-teal-200 shadow"
      >
        <div class="sm:mb-0 mb-2">
          <a
            href="/"
            class="text-grey-darkest hover:text-blue-dark text-2xl no-underline"
            >Home</a
          >
        </div>
      </nav>
    </div>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --blue-hsl: 227, 60%, 60%;
    ---hsl-blue: hsl(var(--blue-hsl));
  }

  body {
    background: #13151a;
  }
  .page {
    background:
      linear-gradient(210deg, hsla(var(--blue-hsl), 0.2), transparent 40%),
      radial-gradient(hsla(260, 66%, 55%, 0.2), transparent 30%) no-repeat -60vw -10vh /
        105vw 210vh;
  }
</style>
