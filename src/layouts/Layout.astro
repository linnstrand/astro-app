---
import BaseLayout from "./BaseLayout.astro";
---

<BaseLayout title="Linn Strand">
  <div class="page w-fit">
    <slot />
  </div>
</BaseLayout>

<style is:global>
  :root {
    --blue-hsl: 227, 60%, 60%;
    ---hsl-blue: hsl(var(--blue-hsl));
  }

  body {
    background: #13151a;
  }
  .page {
    background:
      linear-gradient(210deg, hsla(var(--blue-hsl), 0.2), transparent 40%),
      radial-gradient(hsla(260, 66%, 55%, 0.2), transparent 30%) no-repeat -60vw -10vh /
        105vw 210vh;
  }
</style>
