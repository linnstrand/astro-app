---
import { SkillGraph } from "../components/SkillGraph";
import { processData } from "../components/util";
import Layout from "../layouts/Layout.astro";
import skills from "../fullstack.json";

const data = processData(skills);
---

<Layout title="Linn Strand">
  <main class="text-center w-screen">
    <SkillGraph data={data} size={1100} client:only="react" />
    <!-- <Tree data={data} size={900} client:only="react" /> -->
  </main>
</Layout>

<style>
  .tree-container {
    display: flex;
    position: relative;
    flex-direction: row;
  }

  .lines {
    fill: none;
    stroke-opacity: 0.6;
    stroke-width: 1;
  }
</style>
