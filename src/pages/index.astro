---
import Cloud from "../components/Cloud.astro";
import Hexagon from "../components/Hexagon.astro";
import Gem from "../components/Gem.astro";
import GlassLayout from "../layouts/PaperLayout.astro";
---

<GlassLayout title="Linn Strand">
  <main class="hexa-view items-center min-h-screen w-max">
    <div class="p-5">
      <h1 class="text-9xl font-bold tracking-wide my-4">Linn Strand</h1>
      <h2 class="text-4xl font-bold text-end">Web Developer</h2>
    </div>
    <div class="w-[720px] text-size-9xl">
      <Hexagon class="invisible" />
      <Hexagon
        gradient="bg-gradient-to-br from-teal-500 via-green-500 via-sky-500 via-indigo-500 to-purple-500"
      >
        <div
          class="absolute m-auto left-0 top-2 right-0 bottom-0 text-gray600 leading-tight"
        >
          <div
            class="absolute lines before:absolute before:border-l-2 before:bottom-7 before:h-7 before:left-6 before:border-gray-500 p-1 border-2 bg-gray-200 border-gray-500 top-11 left-2 w-16 h-8"
          >
            Tree
          </div>
          <div
            class="absolute top-0 left-0 right-0 m-auto p-1 lines lines-before bg-gray-200 lines-after after:w-3 before:w-3 after:top-1/2 before:top-1/2 after:left-full before:right-full w-20 h-8"
          >
            Graphs
          </div>
          <div
            class="absolute lines before:absolute before:border-l-2 before:block before:z-10 before:bottom-7 before:h-7 before:right-6 before:border-gray-500 p-1 border-2 bg-gray-200 border-gray-500 top-11 right-2 w-16 h-8"
          >
            Sun
          </div>
        </div>
      </Hexagon>
      <Hexagon />
      <Hexagon class="invisible" />
      <Hexagon
        class="ml-24 text-teal-600"
        title="Fullstack"
        link="/fullstack"
        description="Skill goals"
      />
      <Hexagon />
      <Hexagon />
      <Hexagon />
      <Hexagon />
      <Hexagon class="bg-sky-300" link="/sky">
        <Cloud
          pointer-events-none
          variant="cloud-1"
          color="bg-white"
          class="relative m-auto left-0 right-0 bottom-2 w-8/12"
        >
          Sky
        </Cloud>
      </Hexagon>
      <Hexagon />
      <Hexagon class="ml-24" />
      <Hexagon />
      <Hexagon />
      <Hexagon class="invisible" />
      <Hexagon />
      <Hexagon link="/gems">
        <div class="m-auto left-0 right-0 bottom-2 pointer-events-none">
          <Gem
            class="bg-gradient-to-r from-green-500/50 via-emerald-300 to-green-500/50"
          />
        </div>
      </Hexagon>
    </div>
  </main>

  <style>
    :root {
      --radius: 25vmin;
      --tracksize: 10vmin;
    }
    .hexa-view {
      display: grid;
      grid-template-columns: min-content 1fr;
      align-content: space-around;
      grid-gap: 3rem;
    }
    h1,
    h2 {
      font-family: Verdana, Geneva, Tahoma, sans-serif;
    }

    h1,
    h2 {
      color: white;
      text-shadow: 2px 2px 10px theme(colors.gray.800 / 50%),
        5px 8px 5px theme(colors.gray.800 / 8%),
        -5px 5px 5px theme(colors.gray.800 / 8%);
    }

    .rainbow {
      background: linear-gradient(
        109.6deg,
        theme(colors.red.500) 25%,
        theme(colors.yellow.500) 35%,
        theme(colors.green.500) 45%,
        theme(colors.sky.500) 55%,
        theme(colors.indigo.500) 70%,
        theme(colors.purple.500) 85%
      );
    }
  </style>
</GlassLayout>
