---
import PaperLayout from "../layouts/PaperLayout.astro";
import HoneyComb from "../components/HoneyComb.astro";
---

<PaperLayout title="Linn Strand">
  <main
    class="container grid gap-5 lg:mt-5 mx-auto lg:grid-cols-[min-content_auto] grid-rows-[auto_auto_1fr] lg:grid-rows-[1fr_auto_auto_1fr] lg:gap-6 text-teal-600 px-8"
  >
    <h1
      class="text-8xl text-transparent 2xl:whitespace-nowrap 2xl:mx-10 lg:text-left inset-text lg:row-start-2 font-bold tracking-wide text-center"
    >
      Linn Strand
    </h1>
    <h2
      class="2xl:text-4xl text-transparent lg:row-start-3 text-3xl font-bold text-right"
    >
      Frontend Developer
    </h2>
    <HoneyComb />
  </main>
</PaperLayout>

<style>
  @keyframes gradient-bg {
    0% {
      filter: grayscale(100%);
    }
    40% {
      filter: grayscale(100%);
    }
    100% {
      filter: grayscale(0);
    }
  }

  h1,
  h2 {
    background-clip: text;
    animation: gradient-bg 2s ease-in-out infinite alternate;
    background-image: theme(backgroundImage.rainbow);
    text-shadow:
      theme(colors.white / 50%) 0px 3px 4px,
      theme(colors.white / 12%) 1px 1px 6px;

    &:hover {
      animation-name: none;
      filter: grayscale(0);
      background-image: theme(backgroundImage.rainbow);
    }
  }
</style>
