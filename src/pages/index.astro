---
import PaperLayout from "../layouts/PaperLayout.astro";
import HoneyComb from "../components/HoneyComb.astro";
---

<PaperLayout title="Linn Strand">
  <main
    class="container max-lg:m-auto flex flex-col lg:flex-row items-center lg:mt-5 2xl:gap-12 text-teal-60 xl:gap-5"
  >
    <div class="flex flex-col min-w-[30%]">
      <h1
        class="leading-tight text-transparent 2xl:whitespace-nowrap 2xl:mx-10 lg:text-left inset-text lg:row-start-2 font-bold tracking-wide self-center"
      >
        Linn Strand
      </h1>
      <h2
        class="2xl:text-4xl text-transparent lg:row-start-3 text-3xl font-bold self-end"
      >
        Frontend Developer
      </h2>
    </div>
    <div class="xl:grow lg:self-start scale-75">
      <HoneyComb />
    </div>
  </main>
</PaperLayout>

<style>
  @keyframes gradient-bg {
    0% {
      filter: grayscale(100%);
    }
    40% {
      filter: grayscale(100%);
    }
    100% {
      filter: grayscale(0);
    }
  }
  h1 {
    font-size: clamp(2rem, min(11vw, 6rem), 8rem);
  }

  h1,
  h2 {
    background-clip: text;
    animation: gradient-bg 2s ease-in-out infinite alternate;
    background-image: theme(backgroundImage.rainbow);
    text-shadow:
      theme(colors.white / 50%) 0px 3px 4px,
      theme(colors.white / 12%) 1px 1px 6px;

    &:hover {
      animation-name: none;
      filter: grayscale(0);
      background-image: theme(backgroundImage.rainbow);
    }
  }
</style>
