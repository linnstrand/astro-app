<style>
  .main-grid {
    display: grid;
    grid-template-columns: 1fr auto 1fr auto 1fr;
    grid-template-rows: repeat(3, 1fr);
    grid-gap: 2px;
    place-items: center;
    > :nth-child(even) {
      grid-column-start: 1;
    }
    > :nth-child(odd) {
      grid-column-start: 5;
    }
    > :first-child {
      grid-column-start: 3;
      grid-row: 1/-1;
    }
  }
</style>
