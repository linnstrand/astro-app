---
import CloudLayout from "../layouts/CloudLayout.astro";
import Layout from "../layouts/Layout.astro";
import Cloud from "../components/Cloud.astro";
---

<CloudLayout title="Welcome to Astro.">
  <div
    class="grid grid-rows-[min-content_min-content_auto_max-content] grid-cols-2 h-screen"
  >
    <h1
      class="text-7xl text-white font-bold col-span-2 m-3"
      style="text-shadow: 3px 3px rgba(0, 0, 0, 0.2);"
    >
      Frontend Developer
    </h1>
    <Cloud
      variant="cloud-1"
      class="relative col-start-2 row-start-2 justify-self-end mr-2"
    >
      Linn Strand
    </Cloud>
    <Cloud
      variant="cloud-2"
      class="relative col-start-1 row-start-3 col-span-4 ml-2 z-10"
    >
      Makes websites
    </Cloud>

    <div class="cloud-footer row-start-4 col-span-3 place-items-end">
      <Cloud
        variant="cloud-1"
        color="bg-green-100"
        class="absolute scale-125 lg:left-4 bottom-2"
      >
        Node
      </Cloud>
      <Cloud
        variant="cloud-1"
        color="bg-yellow-100"
        class="absolute left-1/3 bottom-1 scale-12"
      >
        UI
      </Cloud>
      <Cloud
        variant="cloud-2"
        color="bg-cyan-100"
        class="absolute left-28 xl:left-1/2 scale-110 bottom-5"
      >
        TypeScript
      </Cloud>
      <Cloud
        variant="cloud-1"
        color="bg-red-100"
        class="absolute left-2/3 scale-110 bottom-0"
      >
        React
      </Cloud>
    </div>
  </div>

  <style>
    .text-shadow {
      box-shadow: 10px 10px rgba(0, 0, 0, 0.2);
    }
    .cloud-text {
      color: var(--contrast-color);
      font-weight: bold;
      font-size: 20px;
      max-width: 8em;
      text-align: center;
    }

    .cloud-footer {
      height: 100%;
      max-width: 1200px;
      width: 100%;
      position: fixed;
      display: flex;
      height: 8em;
      bottom: 0;
    }

    .group-1 {
      width: 100%;
      max-width: 1400px;
      bottom: 0;
      text-align: center;
    }
  </style>
</CloudLayout>
