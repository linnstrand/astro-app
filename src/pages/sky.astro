---
import CloudLayout from "../layouts/CloudLayout.astro";
import Cloud from "../components/Cloud.astro";
---

<CloudLayout title="Welcome to Astro.">
  <div
    class="space-between relative flex flex-col h-screen overflow-hidden text-center text-2xl"
  >
    <h1
      class="lg:text-8xl pt-10 text-6xl font-bold text-white"
      style="text-shadow: 3px 3px rgba(0, 0, 0, 0.2);"
    >
      Hi, I'm Linn
    </h1>
    <div class="pt-5">
      <Cloud variant="cloud-1" class="relative float-right w-4/12 mt-2 mr-2">
        I like CSS
      </Cloud>
      <Cloud variant="cloud-2" class="relative z-10 w-4/12 ml-2">
        I do Frontend
      </Cloud>
      <Cloud
        variant="cloud-2"
        color="bg-cyan-100"
        class="relative left-0 right-0 w-2/5 m-auto"
      >
        <a
          href="/"
          class="underline text-3xl text-cyan-700 hover:brightness-150"
          >Go back to start</a
        >
      </Cloud>
    </div>
    <div class="top-1/2 absolute bottom-0 left-0 right-0">
      <Cloud
        variant="cloud-1"
        color="bg-green-100"
        class="bottom-2 right-2 w-96 absolute float-right m-auto"
      >
        A bit of backend too
      </Cloud>
      <Cloud
        variant="cloud-1"
        color="bg-yellow-100"
        class="left-1/4 bottom-1/3 absolute w-4/12"
      />

      <Cloud
        variant="cloud-1"
        color="bg-red-100"
        class="bottom-2 absolute float-right w-4/12"
      >
        <a
          class="underline"
          href="https://github.com/linnstrand"
          target="_blank">See me on Github</a
        >
      </Cloud>
    </div>
  </div>

  <style>
    .cloud-container {
      max-width: 50vmin;
      min-width: 15em;
    }
  </style>
</CloudLayout>
