---
import CloudLayout from "../layouts/CloudLayout.astro";
import Layout from "../layouts/Layout.astro";
---

<CloudLayout title="Welcome to Astro.">
  <div class="absolute top-1/2 bottom-1/2">
    <div class="cloud"></div>
    <div class="cloud cloud-2"></div>
  </div>
  <div class="cloud-footer"></div>
</CloudLayout>

<style>
  .cloud-footer {
    position: absolute;
    background: rgba(255, 255, 255);
    width: 100%;
    height: 50px;
    bottom: 0;
    text-align: center;
  }

  .cloud-footer::before {
    content: "";
    background-color: white;
    border-radius: 200% 150% 20% 20%;
    display: block;
    height: 100px;
    position: absolute;
    transform: translate(85%, -55%);
    width: 55%;
  }

  .cloud-footer::after {
    content: "";
    background-color: white;
    border-radius: 100% 200%;
    display: block;
    height: 120px;
    position: absolute;
    transform: translate(-4%, -50%);
    width: 50%;
    z-index: -1;
  }

  .cloud {
    position: absolute;
    background: rgba(255, 255, 255);
    width: 300px;
    height: 110px;
    border-radius: 150px;
    /* box-shadow: 10px 10px rgba(0, 0, 0, 0.2); */
  }

  .cloud::before {
    content: "";
    background: rgba(255, 255, 255);
    position: absolute;
    width: 130px;
    height: 157px;
    border-radius: 50%;
    top: -80px;
    right: 40px;
  }

  .cloud::after {
    content: "";
    background: rgba(255, 255, 255);
    position: absolute;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    top: -50px;
    left: 50px;
  }

  .cloud-2:before {
    content: "";
    background: rgba(255, 255, 255);
    position: absolute;
    width: 125px;
    height: 125px;
    border-radius: 50%;
    top: 15px;
    right: 56px;
  }

  .cloud-2::after {
    content: "";
    background: rgba(255, 255, 255);
    position: absolute;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    top: 40px;
    left: 50px;
  }
</style>
