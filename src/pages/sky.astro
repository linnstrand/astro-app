---
import CloudLayout from "../layouts/CloudLayout.astro";
import Cloud from "../components/Cloud.astro";
---

<CloudLayout title="Welcome to Astro.">
  <div class="relative flex flex-col h-screen overflow-hidden text-center">
    <h1
      class="lg:text-8xl pt-10 text-6xl font-bold text-white"
      style="text-shadow: 3px 3px rgba(0, 0, 0, 0.2);"
    >
      Hi, I'm Linn
    </h1>
    <div class="pt-5">
      <Cloud variant="cloud-1" class="relative float-right w-4/12 mt-2 mr-2">
        I like CSS
      </Cloud>
      <Cloud variant="cloud-2" class="relative z-10 w-4/12 ml-2">
        I do Frontend
      </Cloud>
    </div>

    <Cloud
      variant="cloud-2"
      color="bg-cyan-100"
      class="lg:left-1/3 top-1/4 lg:top-auto relative left-0 right-0 w-2/5"
    >
      <a
        href={`${import.meta.env.BASE_URL}/`}
        class="text-cyan-700 hover:brightness-150 underline">Go back to start</a
      >
    </Cloud>
    <Cloud
      variant="cloud-1"
      color="bg-green-100"
      class="bottom-1/4 lg:bottom-4 right-2 lg:w-2/5 absolute w-1/2"
    >
      A bit of backend too
    </Cloud>
    <Cloud
      variant="cloud-1"
      color="bg-yellow-100"
      class="lg:bottom-20 bottom-2 -left-2 absolute w-4/12"
    />
    <Cloud
      variant="cloud-1"
      color="bg-red-100"
      class="top-1/3 left-1/2 lg:left-0 lg:bottom-2 lg:transform-none absolute w-4/12 -translate-x-1/2 min-w-[14rem]"
    >
      <a class="underline" href="https://github.com/linnstrand" target="_blank"
        >See me on Github</a
      >
    </Cloud>
  </div>
</CloudLayout>

<style>
  .cloud-container {
    max-width: 50vmin;
    min-width: 15em;
  }
</style>
